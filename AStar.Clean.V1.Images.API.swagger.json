      "get": {
        "tags": [
          "Image"
        ],
        "operationId": "Image",
        "parameters": [
          {
            "name": "imagePath",
            "in": "query",
            "style": "form",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "thumbnail",
            "in": "query",
            "style": "form",
            "schema": {
              "type": "boolean",
              "default": true
            }
          },
          {
            "name": "maximumSizeInPixels",
            "in": "query",
            "style": "form",
            "schema": {
              "type": "integer",
              "format": "int32",
