              "minimum": 50,
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "MaximumSizeOfImage",
            "in": "query",
            "style": "form",
            "schema": {
              "maximum": 999999,
              "minimum": 50,
              "type": "integer",
              "format": "int32"
