      "get": {
        "tags": [
          "Image"
        ],
        "operationId": "ImageDetail",
        "parameters": [
          {
            "name": "imagePath",
            "in": "query",
            "style": "form",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
