@inherits LayoutComponentBase

<PageTitle>AStar Web</PageTitle>

<div class="page">
    <div style="@SidebarWidth">
        @if (width == 30)
        {
            <span>
                <a class="oi oi-chevron-right" @onclick="OpenNav"></a><a class="oi oi-chevron-right" @onclick="OpenNav"></a>
            </span>
        }
        else
        {
            <span>
                <a class="oi oi-chevron-left" @onclick="CloseNav"></a><a class="oi oi-chevron-left" @onclick="CloseNav"></a>
            </span>
            <div class="sidebar bg-dark">
                <NavMenu />
            </div>
        }
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code
{
    private int width = 250;

    private void OpenNav() => width = 250;

    private void CloseNav() => width = 30;

    private string SidebarWidth => $"width: {width}px;";
}
