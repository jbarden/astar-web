<Bar Breakpoint="Breakpoint.Desktop" NavigationBreakpoint="Breakpoint.Tablet" ThemeContrast="ThemeContrast.Dark"
     Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small">
    <BarToggler />
    <BarBrand>
        <BarItem>
            <BarLink To="">
                <BarIcon IconName="customIcon" />
                AStar Web UI
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="/">
                    <BarIcon IconName="IconName.Dashboard" />
                    Dashboard
                </BarLink>
            </BarItem>
            <BarItem>
                <BarDropdown @bind-Visible="pagesBarVisible">
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.Image" />
                        Images
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/simple-form"><BarIcon IconName="IconName.Image" />Images</BarDropdownItem>
                    </BarDropdownMenu>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/simple-datagrid"><BarIcon IconName="IconName.Images" />Duplicates</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <BarItem>
                <BarLink To="/">
                    <BarIcon IconName="IconName.Image" />
                    Random
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/">
                    <BarIcon IconName="IconName.Globe" />
                    Scrape
                </BarLink>
            </BarItem>
        </BarStart>
        <BarEnd>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.FolderOpen" />
                        Rename
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/apps/todo">
                            <BarIcon IconName="IconName.FolderOpen" />Directories
                        </BarDropdownItem>
                    </BarDropdownMenu>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/apps/todo">
                            <BarIcon IconName="IconName.File" />Files
                        </BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>
@code {
    private bool pagesBarVisible = true;

    RenderFragment customIcon =@<img src="/brand-logo.png" style="width:32px; height: 32px" />;
}